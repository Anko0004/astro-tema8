---
const { text, icon } = Astro.props;
---

<button>
    {icon && <img class="cta-icon" src={icon} alt="" />}
    <span>{text}</span>
</button>

<style>
button {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--blue);
    color: var(--white);
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s;
}

.cta-icon {
    display: inline-block;
    width: 3rem;
    height: 3rem;
    overflow: visible;
}

button:hover {
    transition: all 0.3s;
    background: var(--bluehover);
}
</style>